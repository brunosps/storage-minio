{
  "name": "minio-hot-cold-tiering",
  "description": "MinIO with hot/cold tiering setup",
  "keywords": ["minio", "s3", "storage", "tiering"],
  "website": "https://min.io/",
  "repository": "https://github.com/minio/minio",
  "env": {
    "MINIO_ROOT_USER": {
      "description": "MinIO root username",
      "value": "admin"
    },
    "MINIO_ROOT_PASSWORD": {
      "description": "MinIO root password (must be at least 8 characters)",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "healthchecks": {
    "web": [
      {
        "type": "startup",
        "name": "web check",
        "description": "Checking web formation",
        "path": "/minio/health/live",
        "attempts": 3,
        "timeout": 5,
        "wait": 5,
        "uptime": 30,
        "content": ""
      }
    ]
  }
}
